@model List<GymManager.Core.Members.Member>

@{

}

<table class="table">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Membership</th>
            <th scope="col">Last suscription</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
        <tr>
            <th scope="row"></th>
            <td>@member.LastName</td>
            <td>@member.BirthDay.ToString("dd/MM/yyyy")</td>
            <td>@member.Email</td>
            <td>
                <a asp-action="RenewMembership" class="btn btn-outline-info" asp-route-memberId="@member.Id">Renew Membership</a>
            </td>
        </tr>
        }
    </tbody>
</table>
